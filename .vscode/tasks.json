{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:debug (clang++)",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-stdlib=libc++",
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-g",
        "-glldb",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.dbg"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [ "$gcc" ],
      "detail": "Debug build of the active file"
    },
    {
      "label": "build:release (clang++)",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-stdlib=libc++",
        "-O2",
        "-DNDEBUG",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": [ "$gcc" ],
      "detail": "Release build of the active file"
    }
  ]
}